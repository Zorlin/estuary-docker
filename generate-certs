#!/bin/bash

mkdir -p certs
# openssl req -x509 -newkey rsa:4096 -sha256 -days 3650 -nodes -keyout certs/myfiles.host.key -out certs/myfiles.host.crt -subj "/CN=myfiles.host"

#openssl req -x509 -newkey rsa:4096 -sha256 -days 3650 -nodes \
#  -keyout certs/myfiles.host.key -out certs/myfiles.host.crt -subj "/CN=myfiles.host" \
#  -addext "subjectAltName=DNS:myfiles.host,DNS:www.myfiles.host,IP:10.0.0.1"

openssl req -x509 -newkey rsa:4096 -sha256 -days 3650 -nodes \
  -keyout certs/myfiles.host.key -out certs/myfiles.host.crt -extensions san -config \
  <(echo "[req]"; 
    echo distinguished_name=req; 
    echo "[san]"; 
    echo subjectAltName=DNS:myfiles.host,DNS:www.myfiles.host,IP:10.0.0.1
    ) \
  -subj "/CN=myfiles.host"
